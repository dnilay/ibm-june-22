<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>ListLeague</servlet-name>
  	<display-name>ListLeague</display-name>
  	<description></description>
  	<servlet-class>org.example.view.ListLeague</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AddLeague</servlet-name>
  	<display-name>AddLeague</display-name>
  	<description></description>
  	<servlet-class>org.example.controller.AddLeague</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ErrorPage</servlet-name>
  	<display-name>ErrorPage</display-name>
  	<description></description>
  	<servlet-class>org.example.view.ErrorPage</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SuccessPage</servlet-name>
  	<display-name>SuccessPage</display-name>
  	<description></description>
  	<servlet-class>org.example.view.SuccessPage</servlet-class>
  </servlet>
 
  <servlet-mapping>
  	<servlet-name>ListLeague</servlet-name>
  	<url-pattern>/list_leagues.view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AddLeague</servlet-name>
  	<url-pattern>/add_leagues.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ErrorPage</servlet-name>
  	<url-pattern>/error_page.view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SuccessPage</servlet-name>
  	<url-pattern>/success_page.view</url-pattern>
  </servlet-mapping>

</web-app>
